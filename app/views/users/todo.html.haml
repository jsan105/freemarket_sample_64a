=render '/shared/header'
.bereadcrumb-body
  - breadcrumb :todo
  = render "shared/breadcrumb"
.mypage-wrap
  .todo-contents
    =render '/shared/side-bar'
    .mypage
      .mypage__middle
        .mypage__middle--tabs
          %li.mypage-tab.a お知らせ
          %li.mypage-tab.b.is-active やることリスト
        .mypage__middle--contents
          .mypage__middle--content.e
            = image_tag '/assets/logo_red.svg', height: '35px', width: '35px', class: 'logo_red'
            %li.mypage__middle--content-topic 事務局から個別メッセージ
            %i.fas.fa-chevron-right
            %i.far.fa-clock
            %li.mypage__middle--content-agetime 15時間前
          .mypage__middle--content.f.is-show
            = image_tag '/assets/logo_red.svg', height: '35px', width: '35px', class: 'logo_red'
